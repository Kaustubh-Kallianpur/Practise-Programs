package practiseDay_1;

import java.util.Scanner;

public class VowelCheck 
{
	char a;
	Scanner sc = new Scanner(System.in);
	
	public char input()
	{
		System.out.print("Enter a charectar: ");
		a = sc.next().charAt(0);
		return a;
	}
	
	public boolean isVowel(char a)
	{
		switch (a)
		{
			case 'A':
			case 'E':
			case 'I':
			case 'O':
			case 'U':
			case 'a':
			case 'e':
			case 'i':
			case 'o':
			case 'u':
				return true;
			default:
				return false;
		}
	}
}
